@model MovieViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Movie</h1>

<form asp-controller="Movies" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-2">
                <label asp-for="MovieName" class="form-label"></label>
                <input type="text" asp-for="MovieName" class="form-control" />
                <span asp-validation-for="MovieName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ProductionName" class="form-label"></label>
                <input type="text" asp-for="ProductionName" class="form-control" />
                <span asp-validation-for="ProductionName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="GenreId" class="form-label"></label>
                <select asp-for="GenreId" asp-items="@(new SelectList(Model.Genres,"Id","GenreName"))" class="form-select">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="GenreId"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ReleaseDate" class="form-label"></label>
                <input type="date" asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate"></span>
            </div>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Add New" />
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}