@model MovieViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete - Movie Details</h1>

<div class="row">
    <div class="col-md-5">
        <div asp-validation-summary="All" class="text-danger"></div>
        <ul class="list-group">
            <li class="list-group-item"><b>Movie Name :</b> @Model.MovieName</li>
            <li class="list-group-item"><b>Production Name :</b>@Model.ProductionName</li>
            <li class="list-group-item"><b>Genre Name :</b>@Model.GenreName</li>
            <li class="list-group-item"><b>Release Date :</b>@Model.ReleaseDate.Value.ToShortDateString()</li>
        </ul>
        <div>
            Are sure do you want to delete this movie?
        </div>
        <div>
            <form asp-controller="Movies" asp-action="Delete" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>

        <a asp-controller="Movies" asp-action="Index">Back to List</a>
    </div>
</div>
